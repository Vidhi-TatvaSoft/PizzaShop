@model DAL.ViewModels.UserViewModel
@{
    Layout = "~/Views/Shared/_OrderAppLayout.cshtml";
    @* var ProfileImage = Model.Image; *@
}
<div id="delete-user" class="modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-body ">
                <div class="delete-cat-image d-flex flex-column  align-items-center">
                    <img src="../images/toppng.com-warning-icon-2400x2400.png" width="50px" alt="">
                    <p>Are you sure you want to Delete this User?</p>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <a type="submit" asp-action="Logout" asp-controller="User" class="btn btn-primary">Yes</a>
                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>



<div class="user-div d-flex ms-3 ms-md-4">
    <div class="user-text fs-2 fw-bold text-primary">My Profile</div>
</div>
<div class="userlist_card mx-auto" style="width: 98%;">
    <div class="card p-4">

        <div class="form">

            <form asp-action="ProfilePage" enctype="multipart/form-data">
                <div class="profile_img">
                    <img src="~/images/profile_div_bg.jpg" height="60" width="100%" alt="" srcset="">
                </div>
                <div class="profile_details mb-3 d-md-flex justify-content-between align-items-center">
                    <div class="profile_pic d-md-flex bg-light">
                        <div class="d-flex">
                            <img style="margin-top:-1.5em" id="user-profile" class="rounded-pill border ms-2" src="@Model.Image"
                            height="100" alt="">
                            
                        <label for="profile-image" class="custom-file-upload text-center">
                            <i class="fa-solid fa-camera mt-5"></i>
                        </label>
                        </div>
                        <input type="file" asp-for="@Model.ProfileImage" id="profile-image" class="d-none" />
                        
                        <div class="ms-2 mt-md-2 mt-3 d-flex flex-column align-items-start">
                            <h6 class="fw-bold">@Model.FirstName @Model.LastName</h6>
                            <span class="profile_username fw-bold">
                                @Model.Username
                            </span>
                        </div>
                    </div>
                    <div class="profile_email ms-md-0 ms-2 mt-md-0 mt-1">
                        <span>
                            @Model.Email
                        </span>
                    </div>
                </div>
                <div class="bg-white mx-auto" style="width: 98%;">
                    <div class="row p-2">
                        <div class="col-12 col-lg-6 col-md-6 mt-3">
                            <div class="form-floating ">
                                <input type="text" class="form-control" id="floatingInput" asp-for="FirstName"
                                placeholder="First Name">
                                <label asp-for="FirstName" for="floatingInput" class="fs-6 text-secondary">First Name</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 col-md-6 mt-3">
                           <div class="form-floating ">
                                <input asp-for="LastName" type="text" class="form-control" id="floatingInput"
                                    placeholder="Last Name">
                                <label asp-for="LastName" for="floatingInput" class="fs-6 text-secondary">Last Name</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 col-md-6 mt-3">
                            <div class="form-floating ">
                                <input asp-for="Username" type="text" class="form-control" id="floatingInput"
                                    placeholder="John Deo">
                                <label asp-for="Username" for="floatingInput" class="fs-6 text-secondary">Username</label>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 col-md-6 mt-3">
                            <div class="form-floating">
                                <input asp-for="Phone" type="tel" class="form-control" id="floatingInput"
                                    placeholder="John Deo">
                                <label asp-for="Phone" for="floatingInput" class="fs-6 text-secondary">Phone</label>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-12 col-lg-4 col-md-4 mt-3">
                            <div class="form-floating">
                                <select asp-for="CountryId" class="form-select" id="Countries"
                                    aria-label="Floating label select example" asp-items="@ViewBag.Countries"></select>
                                <label for="floatingSelect text-secondary">Country</label>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 col-md-4 mt-3">
                            <div class="form-floating">
                                <select class="form-select" asp-for="StateId" asp-items="@ViewBag.States" id="States"
                                    aria-label="Floating label select example"> </select>
                                <label for="floatingSelect text-secondary">State</label>
                                <span class="text-danger">@TempData["stateErrorMessage"]</span>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 col-md-4 mt-3">
                            <div class="form-floating">
                                <select class="form-select" asp-for="CityId" asp-items="@ViewBag.Cities" id="Cities"
                                    aria-label="Floating label select example"></select>
                                <label for="floatingSelect text-secondary">City</label>
                                <span class="text-danger">@TempData["cityErrorMessage"]</span>
                            </div>
                        </div>

                        <div class="col-12 col-lg-8 col-md-8 mt-3 mb-3">
                            <div class="form-floating ">
                                <input asp-for="Address" type="text" class="form-control" id="floatingInput"
                                    placeholder="John Deo">
                                <label asp-for="Address" for="floatingInput" class="fs-6 text-secondary">Address</label>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 col-md-4 mt-3">
                            <div class="form-floating ">
                                <input asp-for="Zipcode" type="text" class="form-control" id="floatingInput"
                                    placeholder="John Deo">
                                <label asp-for="Zipcode" for="floatingInput" class="fs-6 text-secondary">Zipcode</label>
                                <span asp-validation-for="Zipcode" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="d-flex mb-4 d-flex justify-content-end">
                            <div class="craete-button mt-3">
                                <button class="btn btn-primary text-light  border text" type="submit">
                                    Update</button>
                            </div>

                            <div class="craete-button mt-3 text-primary ms-3">
                                <a asp-action="UsersList" asp-controller="User"
                                    class="btn  btn-outline-primary border border-primary  border ">
                                    Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>

        $(document).ready(function () {
            $('#Countries').change(function () {
                var countryId = $(this).val();
                console.log(countryId);

                $.getJSON('@Url.Action("GetStates", "User")', { countryId: countryId }, function (states) {
                    var statesSelect = $('#States');
                    console.log(states);
                    statesSelect.empty();
                    $("#Cities").empty();
                    statesSelect.append('<option selected value="-1">Select State</option>');
                    $("#Cities").append('<option selected value="-1">Select City</option>');
                    $.each(states, function (index, state) {
                        statesSelect.append($('<option/>', {
                            value: state.value,
                            text: state.text
                        }));
                    });
                });
            });
            $('#States').change(function () {
                var stateId = $(this).val();
                $.getJSON('@Url.Action("GetCities", "User")', { stateId: stateId }, function (cities) {
                    var citiesSelect = $('#Cities');
                    citiesSelect.empty();
                    citiesSelect.append('<option selected value="-1">Select City</option>');
                    $.each(cities, function (index, city) {
                        citiesSelect.append($('<option/>', {
                            value: city.value,
                            text: city.text
                        }));
                    });
                });
            });
        });
    </script>


    <script>
        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            var errorMessage = '@TempData["ErrorMessage"]';
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "timeOut": "2000"
            };
            console.log("successMessage", successMessage);
            if (successMessage) {
                toastr.success(successMessage);
            }
            if (errorMessage) {
                toastr.error(errorMessage);
            }
        });
    </script>

    <script>$("#profile-image").change(function () {
            const file = this.files[0];
            if (file) {
                const fileReader = new FileReader();
                fileReader.onload = function (event) {
                    $("#user-profile").attr("src", event.target.result);
                };
                fileReader.readAsDataURL(file);
            }
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}