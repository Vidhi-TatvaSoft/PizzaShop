@model DAL.ViewModels.ChangePasswordViewModel;

@{
    ViewData["Title"] = "Change_Password";
    Layout = "_Layout";
}

<div class="mt-3 fs-1 fw-bold">Change Password</div>

<form asp-action="ChangePassword" method="post">
    <p>Enter a new password to update your account credentials</p>
    <div class="form-group m-3">
        <label asp-for="CurrentPassword"></label>
        <input type="password" asp-for="CurrentPassword" class="form-control input-fields" id="currentPassword" placeholder="Current Password*">
         <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group m-3">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" type="password" class="form-control input-fields" id="newPassword"  placeholder="New Password*">
         <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group m-3">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control input-fields" id="confirmPassword" placeholder="Confirm New Password*">
         <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <span class="text-danger">@ViewBag.message</span>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" class="btn btn-primary">Cancel</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}